{
  "name": "redqueen-app",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "export NODE_OPTIONS=--openssl-legacy-provider; ng serve --host 0.0.0.0",
    "build": "export NODE_OPTIONS=--openssl-legacy-provider; ng build",
    "build:dev": "export NODE_OPTIONS=--openssl-legacy-provider; ng build --configuration development",
    "watch": "export NODE_OPTIONS=--openssl-legacy-provider; ng build --watch --configuration development",
    "test": "export NODE_OPTIONS=--openssl-legacy-provider; ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "dockerize": "docker build -t redqueen-app .",
    "dockerize:linux:arm64": "docker build -t redqueen-app-arm64 --platform linux/arm64 .",
    "dockerize:linux:amd64": "docker build -t redqueen-app-amd64 --platform linux/amd64 .",
    "docker:run": "docker run --env-file .env -p3001:3001 redqueen-app",
    "docker:run:linux:arm64": "docker run --env-file .env -p4201:80 redqueen-app-arm64",
    "docker:run:linux:amd64": "docker run --env-file .env -p4201:80 redqueen-app-amd64",
    "docker:export": "docker save -o redqueen-app-docker.tar redqueen-app",
    "docker:export:linux:arm64": "docker save -o redqueen-app-docker-arm64.tar redqueen-app-arm64",
    "docker:export:linux:amd64": "docker save -o redqueen-app-docker-amd64.tar redqueen-app-amd64",
    "build-test-rq": "ng build --prod --configuration=test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.3",
    "@angular/cdk": "^17.3.3",
    "@angular/common": "^17.3.3",
    "@angular/compiler": "^17.3.3",
    "@angular/core": "^17.3.3",
    "@angular/forms": "^17.3.3",
    "@angular/localize": "^17.3.3",
    "@angular/material": "^17.3.3",
    "@angular/platform-browser": "^17.3.3",
    "@angular/platform-browser-dynamic": "^17.3.3",
    "@angular/router": "^17.3.3",
    "@fortawesome/angular-fontawesome": "^0.14.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@ng-bootstrap/ng-bootstrap": "^16.0.0",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.2",
    "ngx-mqtt": "^17.0.0",
    "ngx-pagination": "^6.0.3",
    "primeicons": "^7.0.0",
    "primeng": "^17.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.6.2",
    "zone.js": "~0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.3",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "^17.3.3",
    "@angular/compiler-cli": "^17.3.3",
    "@types/chart.js": "^2.9.41",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "7.6.0",
    "@typescript-eslint/parser": "7.6.0",
    "eslint": "^8.2.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~5.4.4"
  }
}
